<mujoco model="inverted_pendulum">
	<default>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
	</default>
	<option gravity="0 0 -1" integrator="RK4" timestep="0.0001"/>
	<asset>
	    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
	</asset>
  	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
		<rgba haze="0.15 0.25 0.35 1" />
	    <global offheight="2160" offwidth="3840"/>
    	<quality offsamples="8"/>
	</visual>
	<worldbody>
    	<light name="spotlight0" mode="targetbodycom" target="pole_base" pos="0 0 10" cutoff="60" />
		<light name="spotlight1" mode="targetbodycom" target="pole_base" pos="0.5 0 10" cutoff="60" />
		
		<!-- pole hinge pivot -->
		<body name="pole_base" pos="0 0 0">

			<!-- hinge in the xâ€“z plane, rotate about -y -->
			<joint name="hinge" type="hinge" axis="0 -1 0" range="-3600 3600"/>

			<!-- massless visual pole: capsule of length L = 1 m -->
			<geom name="pole_visual"
				type="capsule"
				fromto="0 0 0   0 0 -1"
				size="0.05"
				density="0"
				contype="0" conaffinity="0"
				rgba="0 1 0 1"/>

			<!-- tip mass: sphere of mass 1 kg located at the end of the pole -->
			<body name="tip" pos="0 0 -1">
				<geom name="ball" type="sphere" size="0.075" mass="1" rgba="1 0 0 1"/>
			</body>
		</body>

	</worldbody>
	<actuator>
		<motor joint="hinge" gear="1" name="hinger"/>
	</actuator>
</mujoco>